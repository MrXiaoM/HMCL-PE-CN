<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_background"
            android:scaleType="centerCrop"/>

    <ImageView
            android:id="@+id/title_image"
            android:layout_width="674dp"
            android:layout_height="225dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/title"/>

    <TextView
        android:id="@+id/loading_text"
        android:textSize="@dimen/text_size_big"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:maxLines="1"
        android:gravity="center"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeTextType="uniform"
        android:text="@string/loading_hint"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/colorPureWhite"
        android:background="#80000000"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintBottom_toTopOf="@id/loading_progress_bar_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:id="@+id/loading_progress_bar_box"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/splash_progress_background"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintBottom_toTopOf="@id/loading_progress_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ProgressBar
                android:id="@+id/loading_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Splash.ProgressBar.Horizontal"
                android:max="100"/>
    </LinearLayout>
    <TextView
        android:id="@+id/loading_progress_text"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxLines="1"
        android:gravity="center"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeTextType="uniform"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/colorPureWhite"
        android:background="#80000000"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>